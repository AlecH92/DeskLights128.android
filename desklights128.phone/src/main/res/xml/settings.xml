<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
 
    <PreferenceCategory android:title="Settings" >

        <EditTextPreference
                android:title="IP Address"
                android:summary="Set the IP address of the DeskLights table"
                android:key="prefIP"/>

        <EditTextPreference
            android:title="Pebble Status"
            android:id="@+id/pebbleStuff"
            android:summary="Disconnected"
            android:key="pebbleStatus"
            android:enabled="false"/>

        <EditTextPreference
        android:title="Bonjour Discovered Table"
        android:id="@+id/bonjourTable"
        android:summary="None discovered"
        android:key="aBonjourIP"
        android:enabled="false"/>

    </PreferenceCategory>
     
</PreferenceScreen>