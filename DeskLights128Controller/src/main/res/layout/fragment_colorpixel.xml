<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ColorPixelFragment" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="X:"
        android:id="@+id/xValueText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:text="1"
        android:id="@+id/xValue"
        android:layout_toEndOf="@+id/xValueText"
        android:layout_alignBottom="@+id/xValueText"
        android:layout_toRightOf="@+id/xValueText"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Y:"
        android:id="@+id/yValueText"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/xValueText"
        android:layout_alignLeft="@+id/xValueText"
        android:layout_alignStart="@+id/xValueText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yValue"
        android:text="1"
        android:inputType="number"
        android:layout_toEndOf="@+id/yValueText"
        android:layout_toRightOf="@+id/yValueText"
        android:layout_alignBottom="@+id/yValueText"
        android:layout_alignRight="@+id/xValue"
        android:layout_alignEnd="@+id/xValue"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/updateButton"
        android:layout_below="@+id/yValue"
        android:layout_alignRight="@+id/yValue"
        android:layout_alignEnd="@+id/yValue"
        android:layout_marginTop="35dp" />

</RelativeLayout>